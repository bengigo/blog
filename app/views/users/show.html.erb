<section class="user-profile">
  <div class="user-card">
  <img class="user-img" src="<%=@user.photo%>">
  <div class="user-info">
    <h2><%=@user.name%></h2>
    <p class="post-count">Number of posts: <%=@user.posts_counter || 0%></p>
    </div>
  </div>
  <div class="user-bio">
  <h2 class="bio-title">Bio</h2>
  <p class="bio-info"><%=@user.bio%></p>
  </div>
  <%@user.latest_three_posts.each do |post| %>
  <div class="post-card">
    <h2 class="post-title"><%=post.title%></h2>
    <p class="post-text"><%=post.text%></p>
    <p class="counters">Comments: <%=post.comments_counter || 0 %>, Likes: <%=post.likes_counter || 0 %></p>
  </div>
  <%end%>
  <button class="all-posts"><%= link_to "See all posts", "/users/#{@user.id}/posts"%></button>
</section>